{
    "name": "xmpp-client",
    "version": "0.1.0",
    "description": "XMPP client built on Atom Shell and React.",
    "homepage": "https://github.com/originalgremlin/xmpp-client",
    "author": "Barry Shapira <barry@aerofs.com>",
    "main": "main.js",
    "repository": {
        "type" : "git",
        "url" : "https://github.com/originalgremlin/xmpp-client"
    },
    "scripts": {
        "install": "bin/xmpp-client install",
        "publish": "bin/xmpp-client publish",
        "start": "bin/xmpp-client start",
        "stop": "bin/xmpp-client stop",
        "restart": "bin/xmpp-client restart"
    },
    "config": {
